<div class="card mb-3">
  <div class="row no-gutters">
    <div class="col-md-4 d-flex align-items-center">
      <img src="{{profile.image}}" class="card-img" alt="User Avatar">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{profile.name}}</h5>
        <p class="card-text">{{profile.email}}</p>
        <p class="card-text">{{ commentsCount }} 則評論</p>
        <p class="card-text"><strong>{{ profile.commentedRestCount }}</strong> 已評論餐廳</p>
        <p class="card-text"><strong>{{ profile.favoriteCount }}</strong> 收藏的餐廳</p>
        <p class="card-text"><strong>{{ profile.followingsCount }}</strong> followings (追蹤者)</p>
        <p class="card-text"><strong>{{ profile.followersCount }}</strong> followers (追蹤者)</p>
        {{#ifCond user.id profile.id}}
        <a href="/users/{{profile.id}}/edit" class="btn btn-primary">Edit</a>
        {{else if profile.isFollowed}}
        <form action="/following/{{profile.id}}?_method=DELETE" method="POST" style="display: contents;"><button
            type="submit" class="btn btn-danger">取消追蹤</button></form>
        {{else}}
        <form action="/following/{{profile.id}}" method="POST" style="display: contents;"><button type="submit"
            class="btn btn-primary">追蹤</button></form>
        {{/ifCond}}
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-5">
    <div class="card mb-3">
      <h5 class="card-header"><strong>{{ profile.followingsCount }}</strong> followings (追蹤者)</h5>
      <div class="card-body">
        {{#each profile.Followings}}
        <div class="m-3" style="display: inline-block">
          <a href="/users/{{this.id}}">
            <img src="{{this.image}}" alt="" style="width: 100px">
          </a>
        </div>
        {{/each}}
      </div>
    </div>
    <div class="card mb-3">
      <h5 class="card-header"><strong>{{ profile.followersCount }}</strong> followers (追蹤者)</h5>
      <div class="card-body">
        {{#each profile.Followers}}
        <div class="m-3" style="display: inline-block">
          <a href="/users/{{this.id}}">
            <img src="{{this.image}}" alt="" style="width: 100px">
          </a>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
  <div class="col-md-7">
    <div class="card mb-3">
      <h5 class="card-header"><strong>{{ profile.commentedRestCount }}</strong> 已評論餐廳</h5>
      <div class="card-body">
        {{#each profile.commentedRestaurants}}
        <div class="m-3" style="display: inline-block">
          <a href="/restaurants/{{this.id}}">
            <img src="{{this.image}}" alt="" style="width: 100px">
          </a>
        </div>
        {{/each}}
      </div>
    </div>
    <div class="card mb-3">
      <h5 class="card-header"><strong>{{ profile.favoriteCount }}</strong> 已收藏餐廳</h5>
      <div class="card-body">
        {{#each profile.FavoriteRestaurants}}
        <div class="m-3" style="display: inline-block">
          <a href="/restaurants/{{this.id}}">
            <img src="{{this.image}}" alt="" style="width: 100px">
          </a>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>